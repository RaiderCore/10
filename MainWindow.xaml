<Window x:Class="TaskSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Solver" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="TaskComboBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="SolveButton" Content="Solve" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Width="100" Click="SolveButton_Click"/>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="OutputTextBox" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top" Width="200" Height="100" IsReadOnly="True"/>
    </Grid>
</Window>